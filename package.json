{
  "version": "2.2.0",
  "name": "react-baseline-inputs",
  "repository": "https://github.com/promptworks/react-baseline-inputs",
  "description": "React components for creating data-driven forms.",
  "license": "MIT",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "unpkg": "dist/index.umd.js",
  "umd:main": "dist/index.umd.js",
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "test": "TZ=America/New_York jest",
    "clean": "rm -rf dist",
    "format": "prettier --write '{src,test}/**/*.{js,ts,tsx}'",
    "format:check": "prettier --check '{src,test}/**/*.{js,ts,tsx}'",
    "prepack": "microbundle --jsx React.createElement --name ReactBaselineInputs"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.{ts,tsx}"
    ],
    "testMatch": [
      "<rootDir>/**/*.test.{ts,tsx}"
    ]
  },
  "peerDependencies": {
    "react": ">=16.8"
  },
  "dependencies": {
    "@types/react-text-mask": "^5.4.6",
    "react-text-mask": "^5.4.3"
  },
  "devDependencies": {
    "@testing-library/react": "^10.0.1",
    "@types/jest": "^25.1.4",
    "@types/jest-axe": "^3.2.1",
    "@types/react": "^16.9.26",
    "@types/react-dom": "^16.9.5",
    "jest": "^25.2.3",
    "jest-axe": "^3.4.0",
    "microbundle": "^0.12.0-next.8",
    "prettier": "^2.0.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-text-mask": "^5.4.3",
    "ts-jest": "^25.2.1",
    "typescript": "^3.8.3"
  }
}
